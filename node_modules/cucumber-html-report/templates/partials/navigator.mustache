<aside class="feature-navigator">
  {{> header }}

  <ul class="summary">
    <li>{{summary.totalFeatures}} Features</li>
    <li>{{summary.totalScenarios}} Scenarios</li>
    <li>{{steps.all}} Steps</li>
    <li class="passed print-hide">{{summary.scenariosPassed}} Passed scenarios</li>
    <li class="failed print-hide">{{summary.scenariosFailed}} Failing scenarios</li>
    <li class="passed print-hide">{{steps.passed}} Passed steps</li>
    <li class="failed print-hide">{{steps.failed}} Failing steps</li>
    <li class="skipped print-hide">{{steps.skipped}} Skipped steps</li>
    <li>Status <span class="{{summary.status}}">{{summary.status}}</span></li>
  </ul>

  <ul class="feature-list print-hide">
    {{#features}}
      <li class="{{status}}">
        <a href="#F_{{id}}" title="{{name}}">{{name}}</a>
        <ul class="scenario-list">
          {{#elements}}
            <li class="{{status}}"><a href="#S_{{id}}" title="{{name}}">{{name}}</a></li>
          {{/elements}}
        </ul>
      </li>
    {{/features}}
  </ul>
</aside>